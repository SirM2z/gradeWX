<header class="ui-header ui-header-positive ui-border-b fadeIn animated">
  <i class="ui-icon-return" onclick="history.back()"></i>
  <h1>查分</h1>
  <div class="ui-personal"><a href="#bindroom/<%= schoolcode %>">我的寝室</a></div>
</header>


<div class="ui-form ui-border-t">
 
  <div class="ui-form-item ui-border-b input-item day">
    <label>日打分:</label>
    <% var val=new Date() %>
    <input class="h5-date" type="date" value="<%= val.Format('yyyy-MM-dd') %>">
    <div class="ui-btn day-btn">查分</div>
  </div>
  
  <div class="ui-form-item ui-border-b">
    <label>周打分:</label>
    <div class="ui-select-group week">
      <div class="ui-select">
        <select class="week-select">
        <% if(yearlist.length>0){ %>
        <% for(var i=0;i<yearlist.length;i++ ) {%>
          <option value="<%= yearlist[i].schoolYearId %>" <% if(yearlist[i].schoolYearId==currentYearId) { %> selected <% }%> > <%= yearlist[i].year%></option>
        <% } %>
        <% }else{ %>
          <option selected value="0" >请选择</option>
        <% } %>
        </select>
      </div>
      <div class="ui-select">
        <select class="week-select-second">
        <% if(yearlist.length>0){ %>
        <% for(var i=0;i<2;i++ ) {%>
          <option value="<%= schoolyearModel.semesterList[i].semesterId %>" <% if(schoolyearModel.semesterList[i].isCurrent==1) { %> selected <% }%> >学期<%= i+1%></option>
        <% }%>
        <% }else{ %>
          <option selected value="0" >请选择</option>
        <% } %>
        </select>
      </div>
      <div class="ui-select">
        <select>
        <% if(yearlist.length>0 && schoolyearModel.semesterList.length>0){ %>
        <% for(var i=0;i<schoolyearModel.semesterList[0].countweek;i++ ) {%>
          <option value="<%= i+1 %>" <% if(schoolyearModel.semesterList[currentSemesterIndex].currentWeek==i+1){ %> selected <% } %> >第<%= i+1%>周</option>
        <% }%>
        <% }else{ %>
          <option selected value="0" >请选择</option>
        <% } %>
        </select>
      </div>
    </div>
    <div class="ui-btn week-btn">查分</div>
  </div>
  
  <div class="ui-form-item ui-border-b month">
    <label>月打分:</label>
    <input class="h5-date" type="month" value="<%= val.Format('yyyy-MM') %>">
    <div class="ui-btn month-btn">查分</div>
  </div>
  
  <div class="ui-form-item ui-border-b">
    <label>抽&nbsp;&nbsp;&nbsp;查:</label>
    <div class="ui-select-group check">
      <div class="ui-select">
        <select class="check-select">
        <% if(yearlist.length>0){ %>
        <% for(var i=0;i<yearlist.length;i++ ) { %>
          <option value="<%= yearlist[i].schoolYearId %>" <% if(yearlist[i].schoolYearId==currentYearId) { %> selected <% }%> > <%= yearlist[i].year %></option>
        <% } %>
        <% }else{ %>
          <option selected value="0" >请选择</option>
        <% } %>
        </select>
      </div>
      <div class="ui-select">
        <select class="check-select-second">
        <% if(yearlist.length>0){ %>
        <% for(var i=0,ilen=schoolyearModel.semesterList.length;i<ilen;i++ ) {%>
          <option value="<%= schoolyearModel.semesterList[i].semesterId %>" <% if(schoolyearModel.semesterList[i].isCurrent==1) { %> selected <% }%> >学期<%= i+1%></option>
        <% }%>
        <% }else{ %>
          <option selected value="0" >请选择</option>
        <% } %>
        </select>
      </div>
    </div>
    <div class="ui-btn check-btn">查分</div>
  </div>
  
</div>

<div class="ui-actionsheet dormitory-menu">
  <div class="ui-actionsheet-cnt dormitory-menu-body">
    
  </div>
</div>